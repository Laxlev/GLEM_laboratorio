<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@android:color/white"
    android:id="@+id/main">

    <!-- Logo en la parte superior -->
    <ImageView
        android:id="@+id/logouaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logouaa"
        android:scaleType="fitCenter"
        android:layout_marginBottom="20dp"/>

    <!-- Título del formulario -->
    <TextView
        android:id="@+id/usuariosLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alumnos"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="20dp" />


    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="anrin.gomezcastillo@localhost.com"
        android:hint="Usuario"
        android:background="@android:color/white"
        android:padding="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="2dp" />


    <!-- Campo de contraseña -->
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anrin11!"
        android:hint="Contraseña"
        android:background="@android:color/white"
        android:padding="10dp"
        android:inputType="textPassword"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="2dp" />

    <!-- Botón de ingresar -->
    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:backgroundTint="#002D6D"
        android:textColor="@android:color/white"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp" />

    <!-- Enlaces para maestro y administrador -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/teacherLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Eres un maestro?"
            android:backgroundTint="#002D6D"
            android:textColor="@android:color/white"
            android:layout_marginEnd="10dp" />
    </LinearLayout>
</LinearLayout>
